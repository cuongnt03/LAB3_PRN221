@page
@model LoginModel
@{
    ViewData["Title"] = "Home page";
}

<div class="row">
    <div class="col-12" style="margin:10px auto">
        <h3 style="text-align:center">Login system</h3>
    </div>
    <div class="col-12">
        @{
            if (TempData["msg"] != null)
            {
                <span class="alert alert-danger">@TempData["msg"]</span>
            }
        }
    </div>
    <div class="col-12">
        <form method="post">
            <div class="mb-3">
                <label asp-for="account.Email" class="form-label" />
                <input class="form-control" name="email" asp-for="account.Email" />
            </div>
            <div class="mb-3">
                <label asp-for="account.Password" class="form-label" />
                <input asp-for="account.Password" name="password" class="form-control" />
            </div>
            <div class="mb-3">
                <input class="btn btn-primary" type="submit" value="Login">
            </div>
        </form>
    </div>
</div>